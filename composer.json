{
    "name": "dragonrun1/event-mediator",
    "description": "A general event mediator (dispatcher) which has minimal dependencies so it is easy to drop in and use.",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Michael Cummings",
            "email": "dragonaire@users.sourceforge.net",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-0": {"Spec\\": "specs/"},
        "psr-4": {
            "EventMediator\\": ["src/"]
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "ext-SPL": "*",
        "php": ">=5.4.1",
        "pimple/pimple": "~3.0"
    },
    "require-dev": {
        "dragonrun1/phpspec": "dev-master",
        "fabpot/php-cs-fixer": "dev-master",
        "phpspec/nyan-formatters":  "1.0.1",
        "phpspec/prophecy": "1.3.1",
        "satooshi/php-coveralls": "dev-master",
        "symfony/console": "<2.7"
    }
}
